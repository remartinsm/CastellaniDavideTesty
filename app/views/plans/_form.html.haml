.form.form-horizontal.plan#new_plan
  .field
    = text_field_tag :title, nil, class: 'form-control', required: true, 'v-model' => 'plan.title', placeholder: '名称'
  .field
    = text_field_tag :description, nil, class: 'form-control', required: true, 'v-model' => 'plan.description', placeholder: '描述'
  .field
    .color-select-feild
      = collection_radio_buttons :color_tag, nil, options_for_color, :last, :first do |b|
        = b.radio_button({class: 'color-radio selected-radio', 'v-model' => 'plan.color_tag'})
        = label_tag "color_tag__#{b.value}", '', style: "background-color: #{b.text}", 'v-on:click' => "selectColor('#{b.text}', 'new')"