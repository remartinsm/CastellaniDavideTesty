  var PlanUrl = '/p/' + gon.plan_ident + '.json'
  var lists_tasks = new Vue({
    el: '#app',
    data: {
      plan: {
        title: '',
        description: '',
        new_list_path: '',
        lists: [{
          id: '',
          title: '',
          color_tag: '',
          color_tag_class: '',
          path:'',
          tasks: [{
            id: '',
            path: '',
            title: '',
            status: '',
            status_class: ''
          }],
          over_tasks: [{
            id: '',
            path: '',
            title: '',
            status: '',
