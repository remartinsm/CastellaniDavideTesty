.row#task-list
  - @plans.each do |p|
    .col-md-3
      = link_to p do
        .bs-callout#callout-helper-pull-navbar{class: "#{}"}
          %h4
            = p.title
          %p
            = p.description

  .col-md-3
    = link_to new_plan_path, title: '添加一个计划' do
      .bs-callout.bs-callout-add#callout-helper-pull-navbar
        %i.fa.fa-plus.bs-callout-add-icon