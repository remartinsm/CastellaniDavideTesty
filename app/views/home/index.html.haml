.container
  .row
    .col-md-4.col-md-offset-7
      .panel.panel-default.index-reg
        .panel-heading
          %i.icon-user
          创建 Taskile 账户
        .panel-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
            = devise_error_messages!
            .form-group
              = f.label :ident, '用户名', class:'col-sm-3 control-label'
              .col-sm-9
                = f.text_field :ident, placeholder: '支持大小写英文字母及数字', autofocus: true, class: 'form-control'
            .form-group
              = f.label :email, '邮箱', class:'col-sm-3 control-label'
              .col-sm-9
                = f.email_field :email, placeholder: '请输入您的邮箱', class: 'form-control'
            .form-group
              = f.label :password, '密码', class:'col-sm-3 control-label'
              .col-sm-9
                = f.password_field :password, placeholder: '密码不少于6位', class: 'form-control'
            .form-group
              = f.label :password_confirmation, '确认密码', class:'col-sm-3 control-label'
              .col-sm-9
                = f.password_field :password_confirmation, placeholder: '再次输入密码', class: 'form-control'
            .form-group
              .col-sm-offset-3.col-sm-9
                = f.submit '注册 Taskile 账户', class: 'btn btn-success btn-sm width-btn'
        .panel-footer
          已有 Taskile 账户?
          = link_to '登录', user_session_path
:css
  body{
    background: url(https://assets-cdn.github.com/images/modules/site/home-hero.jpg) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }

  .index-reg{
    opacity: 0.9;
    margin-top:100px;
  }
  .form-group:last-child{
    margin-bottom:0px;
  }

  .width-btn{
    width: 238px;
  }