.container#repasswd-content
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default.index-reg
        .panel-heading.text-center
          %i.icon-refresh
          找回密码
        .panel-body
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal' }) do |f|
            = devise_error_messages!
            .form-group
              = f.label :email, '邮箱', class:'col-sm-3 control-label'
              .col-sm-9
                = f.email_field :email, placeholder: '注册邮箱', autofocus: true, autocomplete: false, class: 'form-control'
            .form-group
              .col-sm-offset-3.col-sm-9
                = f.submit '找回密码', class: 'btn btn-success btn-sm width-btn'
        .panel-footer.text-center
          = render "devise/shared/links"
